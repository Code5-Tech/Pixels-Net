<UserControl x:Class="Pixels.TestApp.Components.NumbericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixels.TestApp.Components"
             mc:Ignorable="d" >
    <StackPanel Orientation="Horizontal">
        <Button Width="30" Height="40" Name="btnDown" Click="btnDown_Click" Content="&lt;" FontWeight="Bold"></Button>
        <TextBox Width="60" Name="tbxNumber" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" FontWeight="SemiBold" FontSize="16" TextChanged="tbxNumber_TextChanged" KeyUp="tbxNumber_KeyUp"></TextBox>
        <Button Width="30" Height="40" Name="btnUp" Click="btnUp_Click" Content="&gt;" FontWeight="Bold"></Button>
    </StackPanel>
</UserControl>
